<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#e62c3241"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="123dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/icon_logo"
        android:layout_height="48dp" />
    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="menuClick"
        android:background="@drawable/select_sliding_menu"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_1ghtx"
            android:layout_marginLeft="16dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="更换头像"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="menuClick"
        android:id="@+id/item2"
        android:background="@drawable/select_sliding_menu"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_1xgnc"
            android:layout_marginLeft="16dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="修改昵称"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:id="@+id/item3"
        android:onClick="menuClick"
        android:background="@drawable/select_sliding_menu"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_1xgmm"
            android:layout_marginLeft="16dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="menuClick"
        android:id="@+id/item4"
        android:background="@drawable/select_sliding_menu"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_1bdsj"
            android:layout_marginLeft="16dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="绑定手机"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:background="@color/white_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:id="@+id/item5"
        android:clickable="true"
        android:onClick="menuClick"
        android:background="@drawable/select_sliding_menu"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_1bbgx"
            android:layout_marginLeft="16dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="版本更新"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:id="@+id/item6"
        android:onClick="menuClick"
        android:background="@drawable/select_sliding_menu"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_1gywm"
            android:layout_marginLeft="16dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>