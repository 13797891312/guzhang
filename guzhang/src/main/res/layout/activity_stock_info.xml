<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_height"
        android:background="@color/red_bg">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="@dimen/action_height"
            android:background="@drawable/select_backbtn_gb"
            android:clickable="true"
            android:onClick="backClick">

            <ImageView
                android:id="@+id/back_image"
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/back_image_height"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/last" />

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/back_image"
                android:text="返回"
                android:textColor="@color/red_bg"
                android:textSize="@dimen/txt_18"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宁波海运"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_20" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000712"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_10" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reFresh_layout"
            android:layout_width="54dp"
            android:layout_height="@dimen/action_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/select_backbtn_gb"
            android:clickable="true"
            android:onClick="reFreshClick">

            <ImageView
                android:id="@+id/refresh_image"
                android:layout_width="@dimen/back_image_height"
                android:layout_height="@dimen/back_image_height"
                android:layout_centerInParent="true"
                android:src="@drawable/refresh_big" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_backbtn_gb"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="2.0">

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.12"
                android:textColor="@color/red_bg"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_price"
                android:textSize="14sp"
                android:paddingLeft="4dp"
                android:textColor="@color/red_bg"
                android:text="+0.17     +0.63%" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="4dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低"
                    android:textColor="@color/black_54"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="6.91"
                    android:textColor="@color/red_bg"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高"
                    android:textColor="@color/black_54"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="1.18"
                    android:textColor="@color/red_bg"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换手率"
                    android:textColor="@color/black_54"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="12.46%"
                    android:textColor="@color/black_87"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交量"
                    android:textColor="@color/black_54"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="11.11万手"
                    android:textColor="@color/black_87"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="12dp"
            android:src="@drawable/icon_go"
            android:layout_height="12dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    <com.caiyun.guzhang.view.IphoneTreeView_stockinfo
        android:id="@+id/iphone_tree_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/black_12"
        android:dividerHeight="1px"
        android:scrollbars="none"
        android:transcriptMode="normal" />
        <include layout="@layout/tablayout_treeview_group"
            android:id="@+id/header"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/select_buy_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="买入"
                android:textColor="@color/black_54"
                android:textSize="11.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/select_sell_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="卖出"
                android:textColor="@color/black_54"
                android:textSize="11.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/select_zixuan_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="加自选"
                android:textColor="@color/black_54"
                android:textSize="11.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/select_tixing_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="提醒"
                android:textColor="@color/black_54"
                android:textSize="11.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>