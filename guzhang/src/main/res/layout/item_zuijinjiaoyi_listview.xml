<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="8dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <com.caiyun.guzhang.view.CircleImageView
            android:id="@+id/imageView"
            android:clickable="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="打工小王子"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月收益率(%)"
                android:textColor="@color/black_54"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="220.12%"
                android:textColor="@color/red_bg"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胜率(%)"
                android:textColor="@color/black_54"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="@color/red_bg"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/shape_green"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="14sp"
            android:text="买入"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/textView_count"
            android:textColor="@color/red_bg"
            android:layout_toRightOf="@+id/textView1"
            android:text="1000"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black_87"
            android:layout_toRightOf="@+id/textView_count"
            android:text="股"
            android:id="@+id/textView_gu"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black_54"
            android:layout_toRightOf="@+id/textView_gu"
            android:layout_marginLeft="12dp"
            android:text="2小时前"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel1"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/textView1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView10"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="成交价格"
                android:textColor="@color/black_87"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@id/textView_price"
                android:layout_marginTop="4dp"
                android:layout_width="90dp"
                android:layout_toRightOf="@+id/textView10"
                android:textSize="14sp"
                android:text="19.41"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black_87"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textView11"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/textView_price"
                android:text="份额占比"
                android:textColor="@color/black_87"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textView_zb"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/textView11"
                android:textSize="14sp"
                android:text="42.43%"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black_87"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/rel1">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="当前持仓"
                android:textColor="@color/black_87"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_dqcc"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/textView12"
                android:text="12530"
                android:textColor="@color/black_87"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/textView_dqcc"
                android:text="每股成本"
                android:textColor="@color/black_87"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_mgcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/textView13"
                android:text="15.29"
                android:textColor="@color/black_87"
                android:textSize="14sp" />
        </RelativeLayout>
