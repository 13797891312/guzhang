<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_height"
        android:background="@color/red_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

        <ImageView
            android:id="@+id/toggleMenu"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="1dp"
            android:background="@drawable/shape_iv_bg_white"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_search_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="请输入股票代码"
                android:textColor="@color/white_30"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroud"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总资产"
                                android:textColor="@color/black_54"
                                android:textSize="12sp" />
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:text="资产明细 "
                                android:textColor="@color/blue_button"
                                android:textSize="12sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:paddingTop="2dp"
                                android:src="@drawable/details_icon_small"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100,0000.00"
                            android:textColor="@color/red_bg"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/black_12" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总收益率"
                            android:textColor="@color/black_54"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.03%"
                            android:textColor="@color/red_bg"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/black_12" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总收益率"
                            android:textColor="@color/black_54"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.3%"
                            android:textColor="@color/red_bg"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/select_blue_strock_button"
                    android:text="去赚钱"
                    android:textColor="@color/blue_button"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon1" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imageView"
                        android:text="今日盈亏"
                        android:textColor="@color/black_54"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/yingkui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/textView1"
                        android:text="1000.56"
                        android:textColor="@color/red_bg"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/yingkui"
                        android:text="平均持股"
                        android:textColor="@color/black_54"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/pingjunchigu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/textView2"
                        android:text="1000.56"
                        android:textColor="@color/red_bg"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_marginLeft="16dp"
                        android:layout_toLeftOf="@+id/yingkui"
                        android:layout_toRightOf="@+id/imageView"
                        android:layout_toStartOf="@+id/yingkui"
                        android:text="胜        率"
                        android:textColor="@color/black_54"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/shenglv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/textView1"
                        android:text="1.45%"
                        android:textColor="@color/red_bg"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView2"
                        android:layout_alignStart="@+id/textView2"
                        android:layout_below="@+id/textView1"
                        android:text="月均交易"
                        android:textColor="@color/black_54"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/pingjunchigu"
                        android:layout_alignStart="@+id/pingjunchigu"
                        android:layout_below="@+id/textView1"
                        android:text="2次"
                        android:textColor="@color/black_54"
                        android:textSize="14sp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/icon_msg"
                    android:gravity="center_vertical"
                    android:text=" 消息推荐"
                    android:textColor="@color/black_87"
                    android:textSize="16sp" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:gravity="right"
                        android:text="全部"
                        android:textColor="@color/blue_button"
                        android:layout_marginRight="8dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:drawableRight="@drawable/icon_go"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text=" 发生发生发生的发生的发生地方"
                    android:textColor="@color/black_54"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/select_enter_transaction"
                android:clickable="true">

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="108dp">

                    <include
                        android:id="@+id/include1"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black_12" />

                    <include
                        android:id="@+id/include2"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black_12" />

                    <include
                        android:id="@+id/include3"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black_12" />

                    <include
                        android:id="@+id/include4"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black_12" />

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="108dp">

                    <include
                        android:id="@+id/include5"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black_12" />

                    <include
                        android:id="@+id/include6"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black_12" />

                    <include
                        android:id="@+id/include7"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black_12" />

                    <include
                        android:id="@+id/include8"
                        layout="@layout/includ_item_my"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>