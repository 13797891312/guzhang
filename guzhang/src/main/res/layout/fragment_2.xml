<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/red_bg"
        android:gravity="center_vertical"
        android:layout_height="@dimen/action_height">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"/>
        <ImageView
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_search_bg"
            android:clickable="true"
            android:layout_height="32dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/abc_ic_search_api_mtrl_alpha"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white_30"
                android:textSize="16sp"
                android:text="请输入股票代码"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView

        android:fillViewport="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:background="@color/backgroud"
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:background="@color/white"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日收益率"
                            android:textSize="12sp"
                            android:textColor="@color/black_54"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="18sp"
                            android:textColor="@color/red_bg"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/black_12"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总收益率"
                            android:textSize="12sp"
                            android:textColor="@color/black_54"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.03%"
                            android:textSize="18sp"
                            android:textColor="@color/red_bg"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/black_12"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总资产"
                            android:textSize="12sp"
                            android:textColor="@color/black_54"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100,0000"
                            android:textSize="18sp"
                            android:textColor="@color/red_bg"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:text="去赚钱"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/blue_button"
                    android:background="@drawable/select_blue_strock_button"
                    android:layout_height="32dp" />
                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textView1"
                        android:text="今日盈亏"
                        android:layout_toRightOf="@+id/imageView"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/black_54"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/yingkui"
                        android:text="1000.56"
                        android:layout_toRightOf="@+id/textView1"
                        android:layout_marginLeft="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/red_bg"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textView2"
                        android:text="平均持股"
                        android:layout_toRightOf="@+id/yingkui"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/black_54"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/pingjunchigu"
                        android:text="1000.56"
                        android:layout_toRightOf="@+id/textView2"
                        android:layout_marginLeft="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/red_bg"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="胜        率"
                        android:layout_below="@+id/textView1"
                        android:layout_toRightOf="@+id/imageView"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/black_54"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/yingkui"
                        android:layout_toStartOf="@+id/yingkui" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/shenglv"
                        android:layout_below="@+id/textView1"
                        android:text="1.45%"
                        android:layout_toRightOf="@+id/textView1"
                        android:layout_marginLeft="8dp"
                        android:textSize="14sp"
                        android:textColor="@color/red_bg"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textView5"
                        android:text="月均交易"
                        android:textSize="14sp"
                        android:textColor="@color/black_54"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_alignLeft="@+id/textView2"
                        android:layout_alignStart="@+id/textView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textView5"
                        android:text="2次"
                        android:textSize="14sp"
                        android:textColor="@color/black_54"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_alignLeft="@+id/pingjunchigu"
                        android:layout_alignStart="@+id/pingjunchigu" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text=" 消息推荐"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black_87"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/icon_msg"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black_54"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text=" 发生发生发生的发生的发生地方"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:layout_marginRight="8dp"
                    android:drawableRight="@drawable/icon_go"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/select_enter_transaction"
                android:clickable="true"
                android:id="@+id/transaction"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent">

            </RelativeLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_height="80dp"
                    android:layout_width="match_parent">

                    <include
                        android:id="@+id/include1"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />

                    <View
                        android:background="@color/black_12"
                        android:layout_height="match_parent"
                        android:layout_width="1px" />

                    <include
                        android:id="@+id/include2"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />

                    <View
                        android:background="@color/black_12"
                        android:layout_height="match_parent"
                        android:layout_width="1px" />

                    <include
                        android:id="@+id/include3"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />

                    <View
                        android:background="@color/black_12"
                        android:layout_height="match_parent"
                        android:layout_width="1px" />

                    <include
                        android:id="@+id/include4"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />
                </LinearLayout>

                <View
                    android:background="@color/black_12"
                    android:layout_height="1px"
                    android:layout_width="match_parent" />

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_height="80dp"
                    android:layout_width="match_parent">

                    <include
                        android:id="@+id/include5"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />

                    <View
                        android:background="@color/black_12"
                        android:layout_height="match_parent"
                        android:layout_width="1px" />

                    <include
                        android:id="@+id/include6"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />

                    <View
                        android:background="@color/black_12"
                        android:layout_height="match_parent"
                        android:layout_width="1px" />

                    <include
                        android:id="@+id/include7"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />

                    <View
                        android:background="@color/black_12"
                        android:layout_height="match_parent"
                        android:layout_width="1px" />

                    <include
                        android:id="@+id/include8"
                        android:layout_height="match_parent"
                        android:layout_margin="2.0dip"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        layout="@layout/includ_item_my" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>