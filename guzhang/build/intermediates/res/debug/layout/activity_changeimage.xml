<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_height"
        android:background="@color/red_bg">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="@dimen/action_height"
            android:background="@drawable/select_backbtn_gb"
            android:clickable="true"
            android:onClick="backClick">

            <ImageView
                android:id="@+id/back_image"
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/back_image_height"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/last" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_20" />

        <TextView
            android:id="@+id/txt_submit"
            android:layout_width="54dp"
            android:layout_height="@dimen/action_height"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center"
            android:text="完成"
            android:background="@drawable/select_backbtn_gb"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>
    </RelativeLayout>

    <com.caiyun.guzhang.view.CircleImageView
        android:id="@+id/iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/sina" />

    <Button
        android:id="@+id/button_pz"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_buy"
        android:text="拍照上传"
        android:textColor="@color/red_bg"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_xc"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_stock_blue"
        android:text="相册选取"
        android:textColor="@color/red_bg"
        android:textSize="18sp" />
</LinearLayout><!-- From: file:/Users/zhaojin/Documents/studiowork/guzhang/guzhang/src/main/res/layout/activity_changeimage.xml -->