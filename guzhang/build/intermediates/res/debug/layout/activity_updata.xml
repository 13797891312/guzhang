<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/layout_backbar_red" />
    <ImageView
        android:layout_width="100dp"
        android:src="@drawable/ic_luncher"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:text="版本号 v1.0.0"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_weight="1"
        android:textColor="@color/black_87"
        android:layout_marginTop="24dp"
        android:layout_height="0dp" />
    <Button
        android:layout_width="match_parent"
        android:text="检查更新"
        android:id="@+id/button"
        android:textColor="@color/red_bg"
        android:textSize="18sp"
        android:background="@drawable/selector_buy"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="60dp"
        android:layout_height="40dp" />
</LinearLayout><!-- From: file:/Users/zhaojin/Documents/studiowork/guzhang/guzhang/src/main/res/layout/activity_updata.xml -->