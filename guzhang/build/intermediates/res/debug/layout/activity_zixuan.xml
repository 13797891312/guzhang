<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/layout_backbar_red" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:background="@color/backgroud"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:text="名称"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black_54"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:text="市价"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black_54"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:text="涨跌幅"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black_54"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/mListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/black_12"
        android:dividerHeight="1px"
        android:fastScrollEnabled="false"
        android:scrollbars="none" />

    <include
        android:id="@+id/list_result_cover"
        layout="@layout/layout_no_data"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_below="@+id/tab"
        android:visibility="gone" />
</LinearLayout><!-- From: file:/Users/zhaojin/Documents/studiowork/guzhang/guzhang/src/main/res/layout/activity_zixuan.xml -->