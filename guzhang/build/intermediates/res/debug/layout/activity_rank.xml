<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/red_bg"
        android:layout_height="@dimen/action_height" >
        <RelativeLayout android:layout_width="40dp"
            android:onClick="backClick"
            android:clickable="true"
            android:background="@drawable/select_backbtn_gb"
            android:layout_height="@dimen/action_height">
            <ImageView
                android:layout_width="@dimen/back_image_width"
                android:id="@+id/back_image"
                android:layout_height="@dimen/back_image_height"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/last"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_shouyi"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/select_rank_btn"
                android:background="@drawable/selector_rank_btn_shouyi"
                android:text="收益榜"/>
            <Button
                android:id="@+id/button_caifu"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/select_rank_btn"
                android:background="@drawable/selector_rank_btn_caifu"
                android:text="财富榜"/>
        </LinearLayout>        
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/root"
        android:background="@color/backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout><!-- From: file:/Users/zhaojin/Documents/studiowork/guzhang/guzhang/src/main/res/layout/activity_rank.xml -->