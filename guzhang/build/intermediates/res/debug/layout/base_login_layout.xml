<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud" >

    <LinearLayout
        android:id="@+id/login_input_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/layout_id"
            android:layout_width="fill_parent"
           android:layout_height="@dimen/action_height"
            android:background="@drawable/select_login_input_bg"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/login_uid_icon"
                android:layout_width="32.0dip"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4.0dip"
                android:padding="8.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/login_user_n" />

            <ImageView
                android:id="@+id/login_uid_clear"
                android:layout_width="32.0dip"
                android:layout_height="48.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="8.0dip"
                android:scaleType="centerInside"
                android:src="@drawable/cross" />

            <EditText
                android:id="@+id/login_uid_input"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_alignBaseline="@id/login_uid_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="42.0dip"
                android:layout_toRightOf="@id/login_uid_icon"
                android:background="@null"
                android:focusable="true"
                android:hint="手机号"
                android:inputType="phone"
                android:paddingRight="12.0dip"
                android:singleLine="true"
                android:textColor="@color/black_54"
                android:textColorHint="@color/black_26"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_pwd"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/action_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/select_login_input_bg" >

            <ImageView
                android:id="@+id/login_psw_icon"
                android:layout_width="32.0dip"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4.0dip"
                android:padding="8.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/login_pwd_n" />

            <ImageView
                android:id="@+id/login_passwd_clear"
                android:layout_width="32.0dip"
                android:layout_height="48.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="8.0dip"
                android:scaleType="centerInside"
                android:src="@drawable/cross" />

            <EditText
                android:id="@+id/login_passwd_input"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="42.0dip"
                android:layout_toRightOf="@id/login_psw_icon"
                android:background="@null"
                android:cursorVisible="true"
                android:focusable="true"
                android:hint="密码"
                android:inputType="textWebPassword"
                android:longClickable="false"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black_54"
                android:textColorHint="@color/black_26"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_below="@+id/login_input_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/select_red_button"
        android:gravity="center"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="18.0dip" />

</RelativeLayout><!-- From: file:/Users/zhaojin/Documents/studiowork/guzhang/guzhang/src/main/res/layout/base_login_layout.xml -->