<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/layout_backbar_red" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/select_backbtn_gb"
        android:visibility="gone"
        android:id="@+id/lin"
        android:clickable="true"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="12dp" >

        <View
            android:layout_width="4dp"
            android:layout_height="16sp"
            android:background="@color/red_bg" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="驱动事件"
            android:textColor="@color/black_87"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/qudong_txt"
        android:layout_width="match_parent"
        android:textColor="@color/black_54"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="15dp"
        android:src="@drawable/icon_go_down"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_height="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:background="@color/backgroud"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:text="名称"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black_54"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="市价"
            android:gravity="center"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:textColor="@color/black_54"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:text="涨跌幅"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black_54"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/mListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/black_12"
        android:dividerHeight="1px"
        android:fastScrollEnabled="false"
        android:scrollbars="none" />
</LinearLayout><!-- From: file:/Users/zhaojin/Documents/studiowork/guzhang/guzhang/src/main/res/layout/activity_ticaiinfo.xml -->