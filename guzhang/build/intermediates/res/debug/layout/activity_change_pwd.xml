<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroud"
    android:layout_height="match_parent">

    <include layout="@layout/layout_backbar_red" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_whitle_stock_bg"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/black_87"
            android:textSize="18sp"
            android:hint="旧密码"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:background="@color/Transparent"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"
            android:layout_height="48dp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/black_12"
            android:layout_marginLeft="24dp"
            android:layout_height="1px"/>
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/black_87"
            android:hint="新密码"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:background="@color/Transparent"
            android:paddingLeft="24dp"
            android:gravity="center_vertical"
            android:layout_height="48dp" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:text="确认修改"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/select_red_button"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="48dp" />

</LinearLayout><!-- From: file:/Users/zhaojin/Documents/studiowork/guzhang/guzhang/src/main/res/layout/activity_change_pwd.xml -->