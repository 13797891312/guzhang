<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/red_bg"
    android:layout_height="@dimen/action_height" >
    <RelativeLayout android:layout_width="40dp"
        android:onClick="backClick"
        android:clickable="true"
        android:background="@drawable/select_backbtn_gb"
        android:layout_height="@dimen/action_height">
        <ImageView
            android:layout_width="@dimen/back_image_width"
            android:id="@+id/back_image"
            android:layout_height="@dimen/back_image_height"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/last"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/red_bg"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="买入"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="卖出"
                    android:textColor="@color/white_50"
                    android:textSize="@dimen/txt_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="撤单"
                    android:textColor="@color/white_50"
                    android:textSize="@dimen/txt_18" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout android:layout_width="54dp"
        android:layout_alignParentRight="true"
        android:id="@+id/reFresh_layout"
        android:background="@drawable/select_backbtn_gb"
        android:onClick="reFreshClick"
        android:clickable="true"
        android:layout_height="@dimen/action_height">
        <ImageView
            android:layout_width="@dimen/back_image_height"
            android:id="@+id/refresh_image"
            android:layout_height="@dimen/back_image_height"
            android:layout_centerInParent="true"
            android:src="@drawable/refresh_big"/>
    </RelativeLayout>
</RelativeLayout>
